{
  "name": "clipes-awards-server",
  "version": "1.3.1-beta",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up && tsx watch src/index.ts",
    "lint:check": "prettier --check .",
    "lint:fix": "prettier --write .",
    "test": "jest --runInBand",
    "test:watch": "jest --watchAll --runInBand",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "migration:create": "node-pg-migrate -m infra/migrations -j ts create",
    "migration:up": "node-pg-migrate -m infra/migrations --tsconfig tsconfig.json --envPath .env up",
    "migration:down": "node-pg-migrate -m infra/migrations --tsconfig tsconfig.json --envPath .env down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.11.13",
    "jest": "^29.7.0",
    "node-pg-migrate": "^7.9.1",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/websocket": "^11.0.2",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "fastify": "^5.2.1",
    "pg": "^8.14.1",
    "zod": "^3.24.1"
  }
}
